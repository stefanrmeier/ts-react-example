{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "installedESLint": true,
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "block-spacing": 2,
        "brace-style": 2,
        "camelcase": 2,
        "comma-spacing": [2, {
            "before": false,
            "after": true
        }],
        "comma-style": [2, "last"],
        "eol-last": 2,
        "eqeqeq": 2,
        "indent": [
            2,
            "tab",
            { "SwitchCase": 1, "VariableDeclarator": { "var": 1, "let": 1, "const": 2 } }
        ],
        "key-spacing": [2, {
            "afterColon": true
        }],
        "linebreak-style": [2, "unix" ],
        "no-lonely-if": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": [2, { "max": 2, "maxBOF": 1 }],
        "no-nested-ternary": 2,
        "no-new-object": 2,
        "no-spaced-func": 2,
        "no-trailing-spaces": 2,
        "no-underscore-dangle": 2,
        "no-unneeded-ternary": 2,
        "no-var": 2,
        "prefer-arrow-callback": 2,
        "prefer-const": 2,
        "prefer-template": 2,
        "quotes": [2, "single" ],
        "semi-spacing": [2, {"before": false, "after": true}],
        "semi": [2, "always" ],
        "space-before-blocks": 2,
        "space-infix-ops": 2,
        "space-unary-ops": 2,
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2
    }
}
